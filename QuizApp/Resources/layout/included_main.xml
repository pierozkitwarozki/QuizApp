
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:theme="@style/AppTheme.DarkAppBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Select a Topic for Quiz"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_gravity="center"
            android:padding="16dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!--Row one-->
            <android.support.v7.widget.CardView   
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/historyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/history"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="History"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView   
                android:layout_gravity="left"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/geographyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/geography"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="Geography"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--Row Two-->
            <android.support.v7.widget.CardView   
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout 
                    android:id="@+id/spaceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/space"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="Space"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView 
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/engineeringLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/engineering"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="Engineering"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            
            <!--Row Three-->
            <android.support.v7.widget.CardView   
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/programmingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/programming"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="Programming"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView 
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_width="147dp"
                android:layout_height="141dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/businessLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/business"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh"/>
                    <TextView
                        style="@style/topic_textView"
                        android:text="Business"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>

    </ScrollView>
    
</LinearLayout>